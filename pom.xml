    <properties>
        <javaHome>${env.JAVA_HOME}</javaHome>
        <rt.jar.path>${javaHome}/jre/lib/rt.jar</rt.jar.path>
        <jsse.jar.path>${javaHome}/jre/lib/jsse.jar</jsse.jar.path>
